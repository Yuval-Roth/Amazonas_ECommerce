public class ConditionalRule implements PurchaseRule {
    private final PurchaseRule condition;
    private final PurchaseRule rule;

    public ConditionalRule(PurchaseRule condition, PurchaseRule rule) {
        this.condition = condition;
        this.rule = rule;
    }

    @Override
    public boolean isSatisfied(Cart cart, User user) {
        return !condition.isSatisfied(cart, user) || rule.isSatisfied(cart, user);
    }
}